<div class="container-fluid">
  <div class="row">
    <%= render 'patrial/navbar' %>
    <div class="col-lg-6">
      <% if notice %>
          <div class="alert alert-info"> <%= notice %> </div>
      <% end %>

      <div id="info_block" class="thumbnail">
        <div class="caption">
          <h4>Информация для подключения</h4> <br>
          <strong>client_id:</strong>
          <%= $connect.client_id %>
          </p>
          <p>
            <strong>client_secret:</strong>
            <%= $connect.client_secret %>
          </p>

          <% if $connect.code %>
              <p>
                <strong>code:</strong>
                <%= $connect.code %>
                | <%= link_to 'обновить', "https://api.instagram.com/oauth/authorize/?client_id=#{$connect.client_id}&redirect_uri=http://localhost:3000/information_to_connects&scope=public_content+comments&response_type=code" %></td>

              </p>
          <% else %>
              <p>
                <strong>code:</strong>
                не был получен |
                <%= link_to 'получить', "https://api.instagram.com/oauth/authorize/?client_id=#{$connect.client_id}&redirect_uri=http://localhost:3000/information_to_connects&scope=public_content+comments&response_type=code" %></td>
              </p>
          <% end %>

          <% if $connect.code %>

              <% if $connect.access_token %>
                  <p>
                    <strong>access_token:</strong>
                    <%= $connect.access_token %>

                  </p>
              <% else %>
                  <p>
                    <strong>access_token:</strong>
                    не был получен
                    | <%= link_to 'получить', '/get_token' %></td>
                  </p>
              <% end %>
          <% else %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>